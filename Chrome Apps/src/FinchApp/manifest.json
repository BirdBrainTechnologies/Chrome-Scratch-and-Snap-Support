{
	"name": "Finch Connection App",
	"manifest_version": 2,
	"version": "0.5",
    "minimum_chrome_version": "38",
	"app": {
		"background": {
			"scripts": [ "main.js"]
		}
	},
    "externally_connectable": {
        "matches": ["*://scratch.mit.edu/*",
	  				        "*://scratchx.org/*", 
		  			        "*://snap.berkeley.edu/*"]
    },
    
    "icons": {  "16": "assets/finch16.png",
                "48": "assets/finch48.png",
                "128": "assets/finch128.png" },
    
	"permissions": [
		"hid",
        "tts",
		{
			"usbDevices": [
				{ "vendorId": 9044, "productId": 4369 }
 			]
		}
	]
}
